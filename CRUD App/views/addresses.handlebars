<html lang="en">
<div class="container">
    <div class="row justify-content-center">
        <h1>View Address</h1>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Address ID</th>
                <th scope="col">Street</th>
                <th scope="col">City</th>
                <th scope="col">State</th>
                <th scope="col">Zip</th>
            </tr>
        </thead>
        <tbody>
            {{#each results}}
            <tr>
                <td scope="row">{{this.address_id}}</td>
                <td>{{this.street}}</td>
                <td>{{this.city}}</td>
                <td>{{this.state}}</td>
                <td>{{this.zip}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>

<!-- Form -->
<div class="container">
    <div class="row justify-content-center">
        <h1>Insert Address</h1>
    </div>
</div>
<form method='GET' action='/addresses'>
    <div class="form-group">
        <label for="inputAddress">Street</label>
        <input type="text" class="form-control" id="inputAddress" placeholder="1234 Main St" name="street">
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="inputCity">City</label>
            <input type="text" class="form-control" id="inputCity" placeholder="City" name="city">
        </div>
        <div class="form-group col-md-4">
            <label for="inputState">State</label>
            <select id="inputState" class="form-control" name="state">
                <option>CA</option>
                <option>AZ</option>
                <option>WA</option>
                <option>TX</option>
                <option>FL</option>
                <option>NV</option>
            </select>
        </div>
        <div class="form-group col-md-2">
            <label for="inputZip">Zip</label>
            <input type="text" class="form-control" id="inputZip" placeholder="Zip code" name="zip">
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>